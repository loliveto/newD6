<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/matchprompt"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Prompt"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addmatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:text="Add Option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matchprompt" />

    <Button
        android:id="@+id/removematch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:text="Remove Option"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matchprompt" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/match11"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="First Match"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/match12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="First Match"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/match21"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Second Match"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/match22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Second Match"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/match31"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Third Match"
                android:inputType="textPersonName"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/match32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Third Match"
                android:inputType="textPersonName"
                android:visibility="invisible" />
        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/match41"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Fourth Match"
                android:inputType="textPersonName"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/match42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Fourth Match"
                android:inputType="textPersonName"
                android:visibility="invisible" />
        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/match51"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Fifth Match"
                android:inputType="textPersonName"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/match52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Fifth Match"
                android:inputType="textPersonName"
                android:visibility="invisible" />
        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/match61"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Sixth Match"
                android:inputType="textPersonName"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/match62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Sixth Match"
                android:inputType="textPersonName"
                android:visibility="invisible" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/submitmatch"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="300dp"
        android:text="Submit"
        app:layout_constraintStart_toStartOf="@+id/tableLayout2"
        app:layout_constraintTop_toTopOf="@+id/tableLayout2" />

</android.support.constraint.ConstraintLayout>